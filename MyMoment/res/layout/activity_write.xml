<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_bg_common_actionbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/write_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/img_btn_actionbar_back" />

        <ImageView style="@style/title_logo_style" />
    </RelativeLayout>

    <EditText
        android:id="@+id/write_content_et"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="999"
        android:gravity="top"
        android:hint="说点什么吧"
        android:padding="5sp"
        android:textColor="#959595" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#E5E5E5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/write_add_img_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/btn_insert_pic" />

        <Button
            android:id="@+id/write_publish_btn"
            android:layout_width="80sp"
            android:layout_height="45sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_publish_selector"
            android:text="发表"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>