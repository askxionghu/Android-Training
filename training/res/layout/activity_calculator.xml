<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/container_padding_left"
    android:paddingRight="@dimen/container_padding_right" >

    <TextView
        android:id="@+id/caculator_result_tv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="999"
        android:padding="15dp"
        android:text="lsjdlkf" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp" >

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="C" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="รท" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="X" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="7" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="8" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="9" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="4" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="5" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="6" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="1" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="2" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="3" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="(" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="0" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="." />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text=")" />

            <Button
                style="@style/calculator_btn_style"
                android:layout_weight="1"
                android:text="=" />
        </TableRow>
    </TableLayout>

</LinearLayout>